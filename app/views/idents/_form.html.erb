<%= simple_form_for(@ident) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :user %>
    <%= f.association :community %>
     <%= f.collection_select :role, Ident::ROLES, :to_s, :humanize %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
