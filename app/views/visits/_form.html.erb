<%= simple_form_for(@visit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :checkin %>
    <%= f.input :duration %>
    <%= f.association :guest %>
    <%= f.association :user %>
    <%= f.association :unit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
