<h1>My Guests</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Guest name</th>
    <th>Arrival date</th>
    <th>Stay length</th>
    <th>Departure date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @guests.each do |guest| %>
  <tr>
    <td><%= guest.guest_name %></td>
    <td><%= guest.arrival_date %></td>
    <td><%= guest.stay_length %></td>
    <td><%= guest.departure_date %></td>
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

